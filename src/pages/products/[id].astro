---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/common/Navbar.astro";
import Footer from "../../components/common/Footer.astro";
import CTA from "../../components/sections/CTA.astro";
import { getLandingPageData } from "../../lib/landingPageData";
import { ArrowLeft, Star, Truck, ShieldCheck, Heart } from "lucide-react";

export async function getStaticPaths() {
  const data = await getLandingPageData();
  return data.products.map(product => ({
    params: { id: product.id },
    props: { product, products: data.products },
  }));
}

const { product, products } = Astro.props;

// Mock related products (just filter out current)
const relatedProducts = products.filter(p => p.id !== product.id).slice(0, 3);

const navLinks = [
  { label: "Home", href: "/" },
  { label: "Shop", href: "/products" },
  { label: "Features", href: "/features" },
  { label: "About", href: "/about" },
  { label: "Contact", href: "/contact" },
];
---

<Layout title={`${product.name} - Minimal Shop`}>
  <Navbar title="Minimal." links={navLinks} />

  <main class="pt-32 pb-24">
    <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-12">
      <!-- Breadcrumb / Back -->
      <a
        href="/products"
        class="inline-flex items-center text-slate-500 hover:text-indigo-600 font-medium mb-12 transition-colors"
      >
        <ArrowLeft className="w-4 h-4 mr-2" />
        Back to Shop
      </a>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 mb-24">
        <!-- Product Image -->
        <div
          class="bg-slate-100 rounded-3xl aspect-square relative overflow-hidden"
        >
          {
            product.image ? (
              <img
                src={product.image}
                alt={product.name}
                class="w-full h-full object-cover"
              />
            ) : (
              <div class="w-full h-full flex items-center justify-center text-slate-400">
                <span class="bg-white/50 px-6 py-3 rounded-xl text-lg font-medium">
                  No Image
                </span>
              </div>
            )
          }
        </div>

        <!-- Product Info -->
        <div class="flex flex-col justify-center">
          <div class="mb-6">
            <span
              class="bg-indigo-50 text-indigo-700 px-3 py-1 rounded-full text-sm font-bold tracking-wide uppercase"
              >In Stock</span
            >
          </div>
          <h1 class="text-4xl md:text-5xl font-bold text-slate-900 mb-6">
            {product.name}
          </h1>
          <p class="text-3xl text-slate-900 font-medium mb-8">
            {product.price}
          </p>
          <div
            class="prose prose-slate text-lg text-slate-500 mb-10 leading-relaxed"
          >
            <p>{product.description}</p>
          </div>

          <!-- Feature Bullets (Mock) -->
          <ul class="space-y-4 mb-10 text-slate-600">
            <li class="flex items-center">
              <ShieldCheck className="w-5 h-5 mr-3 text-emerald-500" />
              2 Year Warranty Included
            </li>
            <li class="flex items-center">
              <Truck className="w-5 h-5 mr-3 text-indigo-500" />
              Free Express Shipping
            </li>
            <li class="flex items-center">
              <Heart className="w-5 h-5 mr-3 text-rose-500" />
              30-Day Money Back Guarantee
            </li>
          </ul>

          <div class="flex gap-4">
            <button
              class="flex-1 bg-slate-900 text-white py-4 rounded-xl font-bold text-lg hover:bg-slate-800 transition-all shadow-xl shadow-slate-200"
            >
              Add to Cart
            </button>
            <button
              class="w-16 h-14 border border-slate-200 rounded-xl flex items-center justify-center text-slate-400 hover:text-rose-500 hover:border-rose-200 hover:bg-rose-50 transition-all"
            >
              <Heart className="w-6 h-6" />
            </button>
          </div>
        </div>
      </div>

      <!-- Related Products Teaser -->
      {
        relatedProducts.length > 0 && (
          <div class="border-t border-slate-100 pt-24">
            <h2 class="text-2xl font-bold text-slate-900 mb-12">
              You might also like
            </h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
              {relatedProducts.map(p => (
                <a
                  href={`/products/${p.id}`}
                  class="group block bg-white rounded-2xl overflow-hidden border border-slate-100 p-4 hover:border-indigo-100 hover:shadow-lg transition-all"
                >
                  <div class="aspect-square bg-slate-100 rounded-xl overflow-hidden mb-4 relative">
                    {p.image && (
                      <img src={p.image} class="w-full h-full object-cover" />
                    )}
                    <div class="absolute bottom-3 right-3 bg-white/90 backdrop-blur px-3 py-1 rounded-lg text-sm font-bold shadow-sm">
                      {p.price}
                    </div>
                  </div>
                  <h3 class="font-bold text-slate-900 group-hover:text-indigo-600 transition-colors">
                    {p.name}
                  </h3>
                  <p class="text-sm text-slate-500 line-clamp-1">
                    {p.description}
                  </p>
                </a>
              ))}
            </div>
          </div>
        )
      }
    </div>

    <CTA
      title="Ready to order?"
      subtext="Get your hands on our premium collection today."
      buttonText="View All Products"
      link="/products"
    />
  </main>

  <Footer copyright="Â© 2026 Minimal Shop" socials={[]} />
</Layout>
