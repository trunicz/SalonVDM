---
interface Props {
  title: string;
  content: string; // Simplification: Treating Markdoc as string for template
}

const { title, content } = Astro.props;
---

<section id="about" class="py-24 bg-white overflow-hidden">
  <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-12">
    <div class="flex flex-col lg:flex-row items-center gap-16">
      <div class="lg:w-1/2 animate-fade-up">
        <div class="relative">
          <div class="aspect-square bg-slate-100 rounded-3xl overflow-hidden">
            <!-- Placeholder for About Image -->
            <div
              class="w-full h-full flex items-center justify-center text-slate-300 bg-slate-50"
            >
              <span class="text-lg">About Image</span>
            </div>
          </div>
          <!-- Decorative Element -->
          <div
            class="absolute -bottom-10 -right-10 w-64 h-64 bg-slate-50 rounded-full z-[-1]"
          >
          </div>
        </div>
      </div>
      <div class="lg:w-1/2 animate-fade-up">
        <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-6">
          {title}
        </h2>
        <div class="prose prose-lg text-slate-500 mb-8">
          <p>{content}</p>
        </div>
        <div class="flex gap-8">
          <div>
            <span class="block text-3xl font-bold text-indigo-600 mb-1"
              >10k+</span
            >
            <span class="text-sm text-slate-500">Happy Customers</span>
          </div>
          <div>
            <span class="block text-3xl font-bold text-indigo-600 mb-1"
              >4.9</span
            >
            <span class="text-sm text-slate-500">Average Rating</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
