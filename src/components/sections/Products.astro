---
interface Product {
  readonly id?: string;
  readonly name: string;
  readonly price: string;
  readonly description: string;
  readonly image?: string | null;
}

interface Props {
  products: readonly Product[];
  showViewAll?: boolean;
}

const { products, showViewAll = true } = Astro.props;
---

<section id="products" class="py-24 bg-slate-50">
  <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-12">
    <div class="flex justify-between items-end mb-12 animate-fade-up">
      <div>
        <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">
          Paquetes Destacados
        </h2>
        <p class="text-slate-500 max-w-xl">
          Soluciones diseñadas para tu crecimiento. Explora nuestras opciones.
        </p>
      </div>
      {
        showViewAll && (
          <a
            href="/products"
            class="hidden md:flex items-center text-indigo-600 font-medium hover:text-indigo-700"
          >
            Ver Todo <span class="ml-2">→</span>
          </a>
        )
      }
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        products &&
          products.map(product => (
            <a
              href={`/products/${product.id || "#"}`}
              class="block group bg-white rounded-2xl overflow-hidden border border-slate-100 shadow-sm hover:shadow-xl hover:shadow-indigo-100/50 transition-all duration-300 animate-fade-up"
            >
              <div class="aspect-[4/3] bg-slate-200 relative overflow-hidden">
                {product.image ? (
                  <img
                    src={product.image}
                    alt={product.name}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                  />
                ) : (
                  <div class="w-full h-full flex items-center justify-center text-slate-400">
                    <span class="bg-white/50 px-4 py-2 rounded-lg text-sm font-medium">
                      Sin Imagen
                    </span>
                  </div>
                )}
                <div class="absolute bottom-4 right-4 bg-white/90 backdrop-blur text-slate-900 px-3 py-1 rounded-full text-sm font-bold shadow-sm">
                  {product.price}
                </div>
              </div>
              <div class="p-6">
                <h3 class="text-lg font-bold text-slate-900 mb-2 group-hover:text-indigo-600 transition-colors">
                  {product.name}
                </h3>
                <p class="text-slate-500 text-sm mb-4 line-clamp-2">
                  {product.description}
                </p>
                <div class="w-full py-3 bg-slate-900 text-white rounded-xl font-medium hover:bg-indigo-600 transition-colors text-center">
                  Ver Detalles
                </div>
              </div>
            </a>
          ))
      }
    </div>

    <div class="mt-12 text-center md:hidden">
      {
        showViewAll && (
          <a
            href="/products"
            class="inline-flex items-center text-indigo-600 font-medium hover:text-indigo-700"
          >
            View All <span class="ml-2">→</span>
          </a>
        )
      }
    </div>
  </div>
</section>
