---
interface Props {
  title: string;
  subtext: string;
  buttonText: string;
  link?: string;
}

const { title, subtext, buttonText, link = "/contact" } = Astro.props;
---

<section id="cta" class="py-32 bg-slate-900 relative overflow-hidden">
  <!-- Abstract Background -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div
      class="absolute top-0 left-1/4 w-96 h-96 bg-indigo-500/20 rounded-full blur-[100px]"
    >
    </div>
    <div
      class="absolute bottom-0 right-1/4 w-96 h-96 bg-blue-500/20 rounded-full blur-[100px]"
    >
    </div>
  </div>

  <div class="max-w-4xl mx-auto px-6 relative z-10 text-center animate-fade-up">
    <h2 class="text-4xl md:text-5xl font-bold text-white mb-6 tracking-tight">
      {title}
    </h2>
    <p class="text-slate-300 text-lg mb-10 max-w-2xl mx-auto">{subtext}</p>
    <a
      href={link}
      class="inline-block bg-white text-slate-900 px-10 py-4 rounded-full font-bold text-lg hover:bg-indigo-50 transition-colors shadow-2xl shadow-indigo-500/20 hover:scale-105 transform duration-200"
    >
      {buttonText}
    </a>
  </div>
</section>
