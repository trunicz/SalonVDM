---
import { ArrowRight } from "lucide-react";

interface Props {
  headline: string;
  subheadline: string;
  ctaText: string;
  ctaLink: string;
}

const { headline, subheadline, ctaText, ctaLink } = Astro.props;
---

<section
  class="relative pt-32 pb-20 lg:pt-48 lg:pb-32 overflow-hidden bg-gradient-to-b from-slate-50 to-white"
>
  <div
    class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-12 relative z-10 text-center"
  >
    <div class="animate-fade-up">
      <h1
        class="text-5xl md:text-7xl font-bold tracking-tight mb-8 text-slate-900 leading-[1.1]"
      >
        {headline}
      </h1>
      <p
        class="mt-4 text-xl text-slate-600 max-w-2xl mx-auto mb-10 leading-relaxed font-light"
      >
        {subheadline}
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a
          href={ctaLink}
          class="inline-flex items-center justify-center px-8 py-4 text-lg font-medium rounded-full text-white bg-slate-900 hover:bg-slate-800 transition-all shadow-xl shadow-slate-200 hover:-translate-y-1"
        >
          {ctaText}
          <ArrowRight className="ml-2 w-5 h-5" />
        </a>
        <a
          href="/about"
          class="inline-flex items-center justify-center px-8 py-4 text-lg font-medium rounded-full text-slate-700 bg-white border border-slate-200 hover:bg-slate-50 transition-all hover:-translate-y-1"
        >
          Learn More
        </a>
      </div>
    </div>
  </div>

  <!-- Abstract Background Shape -->
  <div
    class="absolute top-0 left-0 w-full h-full overflow-hidden -z-10 opacity-30 pointer-events-none"
  >
    <div
      class="absolute -top-[20%] -right-[10%] w-[50%] h-[50%] bg-indigo-200/50 rounded-full blur-[120px]"
    >
    </div>
    <div
      class="absolute top-[20%] -left-[10%] w-[60%] h-[60%] bg-blue-100/50 rounded-full blur-[120px]"
    >
    </div>
  </div>
</section>
