<header
  class="bg-white/80 backdrop-blur-md sticky top-0 z-50 border-b border-stone-100 shadow-sm"
>
  <div class="container mx-auto px-6 py-4 flex justify-between items-center">
    <a
      href="/"
      class="text-2xl font-display font-bold text-stone-900 tracking-tight z-50 relative"
    >
      Salón <span class="text-gold-600">Villas del Mayo</span>
    </a>

    <!-- Desktop Navigation -->
    <nav
      class="hidden md:flex gap-8 items-center font-medium text-sm text-stone-600"
    >
      <a href="/" class="hover:text-gold-600 transition-colors">Inicio</a>
      <a href="/nosotros" class="hover:text-gold-600 transition-colors"
        >Nosotros</a
      >
      <a href="/galeria" class="hover:text-gold-600 transition-colors"
        >Galería</a
      >
      <a href="/amenidades" class="hover:text-gold-600 transition-colors"
        >Amenidades</a
      >
    </nav>

    <!-- Desktop Contact Button -->
    <a
      href="https://wa.me/6131091873"
      target="_blank"
      class="hidden md:flex bg-gradient-to-r
    from-gold-500 to-gold-600 hover:from-gold-400 hover:to-gold-500 text-white
    px-5 py-2.5 rounded-full font-medium transition-all shadow-lg
    hover:shadow-gold-500/30 items-center gap-2 text-sm"
    >
      <span>Contactar</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        ><path
          d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
        ></path></svg
      >
    </a>

    <!-- Mobile Menu Toggle -->
    <button
      id="menu-toggle"
      class="md:hidden text-stone-900 focus:outline-none z-50 relative w-8 h-8 flex flex-col justify-center gap-1.5"
      aria-label="Abrir menú"
    >
      <span
        class="w-full h-0.5 bg-current transition-all duration-300 origin-center"
        id="span-1"></span>
      <span
        class="w-full h-0.5 bg-current transition-all duration-300 origin-center"
        id="span-2"></span>
      <span
        class="w-full h-0.5 bg-current transition-all duration-300 origin-center"
        id="span-3"></span>
    </button>
  </div>
</header>

<!-- Mobile Menu Overlay -->
<div
  id="mobile-menu"
  class="fixed inset-0 bg-white/95 backdrop-blur-xl z-40 hidden flex-col justify-center items-center gap-8 opacity-0"
>
  <nav
    class="flex flex-col gap-6 text-center text-2xl font-display font-medium text-stone-800"
  >
    <a href="/" class="mobile-link overflow-hidden">
      <span class="block translate-y-full">Inicio</span>
    </a>
    <a href="/nosotros" class="mobile-link overflow-hidden">
      <span class="block translate-y-full">Nosotros</span>
    </a>
    <a href="/galeria" class="mobile-link overflow-hidden">
      <span class="block translate-y-full">Galería</span>
    </a>
    <a href="/amenidades" class="mobile-link overflow-hidden">
      <span class="block translate-y-full">Amenidades</span>
    </a>
  </nav>

  <div class="mobile-link overflow-hidden">
    <a
      href="https://wa.me/6131091873"
      target="_blank"
      class="bg-gradient-to-r translate-y-full
        from-gold-500 to-gold-600 active:from-gold-600 active:to-gold-700 text-white
        px-8 py-3 rounded-full font-medium transition-all shadow-lg
        shadow-gold-500/30 flex items-center gap-2 text-lg"
    >
      <span>Contactar</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        ><path
          d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
        ></path></svg
      >
    </a>
  </div>
</div>

<script>
  import gsap from "gsap";

  const menuToggle = document.getElementById("menu-toggle");
  const mobileMenu = document.getElementById("mobile-menu");
  const mobileLinks = document.querySelectorAll(".mobile-link span");
  const spans = [
    document.getElementById("span-1"),
    document.getElementById("span-2"),
    document.getElementById("span-3"),
  ];

  let isOpen = false;

  if (menuToggle && mobileMenu) {
    const tl = gsap.timeline({ paused: true });

    // Menu opening animation
    tl.to(mobileMenu, {
      display: "flex",
      duration: 0,
    })
      .to(mobileMenu, {
        opacity: 1,
        duration: 0.3,
        ease: "power2.inOut",
      })
      .to(mobileLinks, {
        y: 0,
        duration: 0.5,
        stagger: 0.1,
        ease: "power3.out",
      });

    menuToggle.addEventListener("click", () => {
      isOpen = !isOpen;

      if (isOpen) {
        tl.play();
        // Animate hamburger to X
        gsap.to(spans[0], { rotate: 45, y: 8, duration: 0.3 });
        gsap.to(spans[1], { opacity: 0, duration: 0.3 });
        gsap.to(spans[2], { rotate: -45, y: -8, duration: 0.3 });
        document.body.style.overflow = "hidden"; // Prevent scrolling
      } else {
        tl.reverse();
        // Animate X back to hamburger
        gsap.to(spans[0], { rotate: 0, y: 0, duration: 0.3 });
        gsap.to(spans[1], { opacity: 1, duration: 0.3 });
        gsap.to(spans[2], { rotate: 0, y: 0, duration: 0.3 });
        document.body.style.overflow = "";
      }
    });

    // Close menu when clicking a link
    const links = document.querySelectorAll("#mobile-menu a");
    links.forEach(link => {
      link.addEventListener("click", () => {
        if (isOpen) {
          isOpen = false;
          tl.reverse();
          gsap.to(spans[0], { rotate: 0, y: 0, duration: 0.3 });
          gsap.to(spans[1], { opacity: 1, duration: 0.3 });
          gsap.to(spans[2], { rotate: 0, y: 0, duration: 0.3 });
          document.body.style.overflow = "";
        }
      });
    });
  }
</script>
