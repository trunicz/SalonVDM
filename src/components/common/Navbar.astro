---
const { title = "Brand", links = [] } = Astro.props;
---

<nav
  class="fixed w-full z-50 top-0 left-0 bg-white/80 backdrop-blur-md border-b border-gray-100"
>
  <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-12">
    <div class="flex items-center justify-between h-20">
      <div class="flex items-center">
        <a href="/" class="text-2xl font-bold tracking-tight text-slate-900"
          >{title}</a
        >
      </div>
      <div class="hidden md:block">
        <div class="ml-10 flex items-center space-x-8">
          {
            links.map((link: any) => (
              <a
                href={link.href}
                class="text-slate-600 hover:text-indigo-600 px-3 py-2 text-sm font-medium transition-colors"
              >
                {link.label}
              </a>
            ))
          }
          <a
            href="#cta"
            class="bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-2.5 rounded-full text-sm font-medium transition-all shadow-lg shadow-indigo-200"
          >
            Comenzar
          </a>
        </div>
      </div>
      <div class="block md:hidden">
        <!-- Mobile menu button placeholder -->
        <button class="text-slate-600 hover:text-slate-900">
          <svg
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
</nav>
